
<div><div class="container p-3 mx-auto w-50 form-box my-5 rounded-md">
    <h2 style="color: #181642" class="text-center mb-3">Update Job</h2>
    <form action="/updateJob" method="post">
      <input type="hidden" class="form-control" id="id" name="id" value="<%= job.id %>">
      <div class="input-group mb-3">
        <span class="input-group-text">Company Name</span>
        <input
          required
          name="companyName"
          type="text"
          class="form-control"
          aria-label="Amount (to the nearest dollar)"
          value="<%= job.companyName %>"
        />
      </div>
      <div class="input-group mb-3">
        <label for="skills" class="form-label">select job category : &nbsp;</label>
        <select
          required
          name="jobType"
          class="form-select"
          aria-label="Default select example"
        >
          
          <option value="Tech" <%= job.jobType === 'Tech' ? 'selected' : '' %>>Tech</option>
          <option value="Non-Tech" <%= job.jobType === 'Non Tech' ? 'selected' : '' %>>Non Tech</option>
        </select>
      </div>
  
      <div class="input-group mb-3">
        <label for="skills" class="form-label">select job designation : &nbsp;</label>
        <select
          required
          name="role"
          class="form-select"
          aria-label="Default select example"
        >
          
          <option value="HR" <%= job.role === 'HR' ? 'selected' : '' %>>HR</option>
          <option value="SDE" <%= job.role === 'SDE' ? 'selected' : '' %>>SDE</option>
          <option value="DevOps" <%= job.role === 'DevOps' ? 'selected' : '' %>>DevOps</option>
          <option value="MERN Developer" <%= job.role === 'MERN Developer' ? 'selected' : '' %>>MERN Developer</option>
          <option value="MEAN Developer" <%= job.role === 'MEAN Developer' ? 'selected' : '' %>>MEAN Developer</option>
          <option value="JAVA Developer" <%= job.role === 'JAVA Developer' ? 'selected' : '' %>>JAVA Developer</option>
          <option value="Front-End Developer" <%= job.role === 'Front-End Developer' ? 'selected' : '' %>>Front-End Developer</option>
          <option value="Back-End Developer" <%= job.role === 'Back-End Developer' ? 'selected' : '' %>>Back-End Developer</option>
          <option value="Full-Stack Developer" <%= job.role === 'Full-Stack Developer' ? 'selected' : '' %>>Full-Stack Developer</option>
        </select>
      </div>
  
      <div class="mb-3">
        <label for="basic-url" class="form-label">Enter job location</label>
        <div class="input-group">
          <input
            required
            name="location"
            type="text"
            class="form-control"
            id="basic-url"
            aria-describedby="basic-addon3 basic-addon4"
            value="<%= job.location %>"
          />
        </div>
      </div>
  
      
  
      <div class="input-group mb-3">
        <input
          required
          name="package"
          type="text"
          class="form-control"
          placeholder="enter salary"
          aria-label="Username"
          value="<%= job.package %>"
        />
        <span class="input-group-text">Total Positions</span>
        <input
          required
          name="number_of_openings"
          type="number"
          class="form-control"
          placeholder="total no of openings"
          aria-label="Server"
          value="<%= job.openings %>"
        />
      </div>
      <div class="input-group mb-3">
        <label for="skills" class="form-label">Skills : &nbsp;</label>
<select
  id="skills"
  required
  multiple
  name="skills"
  class="form-select"
  aria-label="Default select example"
>
  <% job.skills.forEach((skill) => { %>
    <option value="<%= skill %>" <%= job.skills.includes(skill) ? 'selected' : '' %>><%= skill %></option>
  <% }) %>
  <option value="React">React</option>
  <option value="NodeJs">NodeJs</option>
  <option value="Angular">Angular</option>
  <option value="MongoDB">MongoDB</option>
  <option value="SQL">SQL</option>
  <option value="Express">Express</option>
  <option value="Java">Java</option>
  <option value="SpringBoot">SpringBoot</option>
  <option value="C++">C++</option>
  <option value="Data Structures & Algo">Data Structures & Algo</option>
</select>
        <span class="input-group-text">Apply By</span>
        <input
          name="apply_by"
          type="date"
          class="form-control"
          placeholder="total no of openings"
          aria-label="Server"
          value="<%= job.applyBy %>"
        />
      </div>
      <button class="w-100 mb-3 mt-2 btn btn-md btn-success" type="submit">
        Submit
      </button>
    </form>
  </div>
  </div>
  
  